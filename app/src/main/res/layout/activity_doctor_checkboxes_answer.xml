<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DoctorCheckboxesAnswerActivity"
    android:background="#483BD140"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="16dp"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/EnterQuestionCheck"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:hint="Enter the Question"
                    android:background="#fff"
                    android:gravity="center"
                    android:textSize="21sp"
                    android:layout_marginTop="10dp"/>


            </LinearLayout>
            <EditText
                android:id="@+id/Check1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/outline"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="21sp"
                android:drawableLeft="@drawable/ic_check_box_blank_24dp"
                android:drawablePadding="10dp"
                android:paddingLeft="16dp"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/Check2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/outline"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="21sp"
                android:drawableLeft="@drawable/ic_check_box_blank_24dp"
                android:drawablePadding="10dp"
                android:paddingLeft="16dp"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/Check3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/outline"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="21sp"
                android:drawableLeft="@drawable/ic_check_box_blank_24dp"
                android:drawablePadding="10dp"
                android:paddingLeft="16dp"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/Check4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/outline"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="21sp"
                android:drawableLeft="@drawable/ic_check_box_blank_24dp"
                android:drawablePadding="10dp"
                android:paddingLeft="16dp"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/Check5"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/outline"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="21sp"
                android:drawableLeft="@drawable/ic_check_box_blank_24dp"
                android:drawablePadding="10dp"
                android:paddingLeft="16dp"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/Check6"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/outline"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="21sp"
                android:drawableLeft="@drawable/ic_check_box_blank_24dp"
                android:drawablePadding="10dp"
                android:paddingLeft="16dp"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/EnterRightAnswerCheck"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:hint="Enter Answer"
                android:background="#fff"
                android:gravity="center"
                android:textSize="21sp"
                android:layout_marginTop="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="right"
                android:layout_marginTop="30dp">
                <Button
                    android:id="@+id/btnAddCheck"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_gravity="right"
                    android:text="Add"
                    android:background="@drawable/curvecolor4"
                    android:textColor="#fff"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    android:textSize="21sp"
                    android:layout_marginTop="10dp"/>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
