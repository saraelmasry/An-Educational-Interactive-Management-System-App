<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.adminProfileFragment"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="@color/backgroundColor"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="32dp"
        >
        <RelativeLayout
            android:id="@+id/ad_profile_image_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/profile_image_shape"
            >
            <LinearLayout
                android:id="@+id/ad_upload_image_id"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/profile_image_shape_1"
                android:layout_alignParentBottom="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Image"
                    android:textSize="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#67D8D6D6"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#67D8D6D6"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="#202333"
                android:textSize="18dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                />
            <TextView
                android:id="@+id/ad_profile_name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="25dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#67D8D6D6"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#202333"
                android:textSize="18dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                />
            <TextView
                android:id="@+id/ad_profile_email_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="25dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#67D8D6D6"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Id"
                android:textColor="#202333"
                android:textSize="18dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                />
            <TextView
                android:id="@+id/ad_profile_id_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="25dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"
            />
    </LinearLayout>
</LinearLayout>